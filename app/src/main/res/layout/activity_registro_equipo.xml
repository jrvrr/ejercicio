            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 13"
            android:src="@drawable/queretaro" />

        <ImageButton
            android:id="@+id/btnLogo14"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 14"
            android:src="@drawable/sanluis" />

        <ImageButton
            android:id="@+id/btnLogo15"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 15"
            android:src="@drawable/santos" />

        <ImageButton
            android:id="@+id/btnLogo16"
