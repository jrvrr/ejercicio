            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 17"
            android:src="@drawable/toluca" />

        <ImageButton
            android:id="@+id/btnLogo18"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 18"
            android:src="@drawable/xolos" />
        </GridLayout>

        <!-- ImageView para mostrar el logo seleccionado -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Logo del Equipo"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Botón para guardar el equipo -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Guardar Equipo"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/blue"/>

    </LinearLayout>
