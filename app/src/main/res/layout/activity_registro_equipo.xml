<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/background">

        <!-- Nombre del equipo -->
        <EditText
            android:id="@+id/txtNombreEquipo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nombre del Equipo" />

        <!-- Alias del equipo -->
        <EditText
            android:id="@+id/txtAlias"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Alias" />

        <!-- Spinner para locación -->
        <Spinner
            android:id="@+id/spinnerLocacion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:entries="@array/locaciones" />

        <!-- Contenedor para los ImageButtons -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="447dp"
            android:layout_marginTop="16dp"
            android:columnCount="4"
            android:gravity="center">

            <!-- Botones de imagen para seleccionar el logo -->
        <ImageButton
            android:id="@+id/btnLogo1"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 1"
            android:src="@drawable/america" />

        <ImageButton
            android:id="@+id/btnLogo2"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 2"
            android:src="@drawable/atlas" />

        <ImageButton
            android:id="@+id/btnLogo3"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 3"
            android:src="@drawable/chivas" />

        <ImageButton
            android:id="@+id/btnLogo4"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 4"
            android:src="@drawable/cruzazul" />

        <ImageButton
            android:id="@+id/btnLogo5"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 5"
            android:src="@drawable/juarez" />

        <ImageButton
            android:id="@+id/btnLogo6"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 6"
            android:src="@drawable/leon" />

        <ImageButton
            android:id="@+id/btnLogo7"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 7"
            android:src="@drawable/mazatlan" />

        <ImageButton
            android:id="@+id/btnLogo8"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 8"
            android:src="@drawable/monterrey" />

        <ImageButton
            android:id="@+id/btnLogo9"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 9"
            android:src="@drawable/necaxa" />

        <ImageButton
            android:id="@+id/btnLogo10"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logo 10"
            android:src="@drawable/pachuca" />

        <ImageButton
            android:id="@+id/btnLogo11"
